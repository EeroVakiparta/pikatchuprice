{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/npm",
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "CHANGELOG.md",
          "public/version.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/exec", 
      {
        "successCmd": "node -e \"const fs=require('fs');const pkg=require('./package.json');const data={version:pkg.version,buildDate:new Date().toISOString()};fs.writeFileSync('./public/version.json',JSON.stringify(data,null,2));\""
      }
    ]
  ]
} 